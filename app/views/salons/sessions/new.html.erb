<div class="login_back">

  <div class="sign-logobox">
    <p class="logo2">
      <%= image_tag 'logo.png',width: 200%>
    </p>
    <h1 class="top-title">be-pass</h1>
  </div>

  <div class="login_box">
    <h2 class="lgin-title">サロンログイン</h2>
    <div class="form_wrapper">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン", class: "login_submit" %>
        </div>

      <% end %>
    </div>

    <p class="sepa_line"></p>
    <P class="middle small">お持ちのアカウントでログイン</P>

    <div class="icon">
      <%= link_to '#'do %>
        <%= image_tag 'twitter.jpg', class: 'sns-icon'%>
      <% end %>
    </div>
    <div class="icon">
      <%= link_to '#' do %>
        <%= image_tag 'facebook.jpg', class: 'sns-icon' %>
      <% end %>
    </div>
    <div class="icon">
      <%= link_to '#' do %>
        <%= image_tag 'google.jpg', class: 'sns-icon' %>
      <% end %>
    </div>
    <p class="sepa_line"></p>

    <%= render "students/shared/links" %>
  </div>
</div>
